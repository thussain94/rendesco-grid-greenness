{
	"compilerOptions": {
		"target": "ES2017",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@components/*": [
				"./shared/components/*"
			],
			"@mock-data/*": [
				"./shared/mock-data/*"
			],
			"@models/*": [
				"./shared/models/*"
			]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"next-env.d.ts",
		"build/types/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}